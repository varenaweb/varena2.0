<%- include("partials/head") %>
<%- include("partials/header") %>

<main>
  <section id="<%= strings.hero.anchorId %>" class="section section-alt">
    <div class="container">
      <header class="section-header">
        <p class="section-kicker"><%= strings.hero.kicker %></p>
        <h1 class="section-title"><%= strings.hero.title %></h1>
        <p class="section-description"><%= strings.hero.description %></p>
      </header>

      <div class="contact-layout">
        <div class="contact-text">
          <p><%= strings.prompts.title %></p>
          <ul class="contact-list">
            <% strings.prompts.items.forEach(item => { %>
              <li><%= item %></li>
            <% }) %>
          </ul>
          <p class="contact-hint"><%= strings.hint %></p>
        </div>

        <div class="contact-card">
          <form
            id="contact-form"
            class="contact-form"
            data-contact-form
            data-lang="<%= lang %>"
            action="<%= contactApi %>"
            method="post"
          >
            <input type="hidden" name="lang" value="<%= lang %>">
            <input
              type="text"
              name="website"
              class="form-input form-input--hidden"
              tabindex="-1"
              autocomplete="off"
              aria-hidden="true"
            >
            <input type="hidden" name="recaptchaToken" value="">

            <div class="form-row">
              <div class="form-group">
                <label class="form-label" for="nombre"><%= strings.contactForm.labels.name %></label>
                <input
                  type="text"
                  id="nombre"
                  name="name"
                  class="form-input"
                  placeholder="<%= strings.contactForm.placeholders.name %>"
                  required
                >
                <p class="form-error" data-error-for="name"></p>
              </div>
              <div class="form-group">
                <label class="form-label" for="email"><%= strings.contactForm.labels.email %></label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  placeholder="tu@correo.com"
                  required
                >
                <p class="form-error" data-error-for="email"></p>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label" for="tipo"><%= strings.contactForm.labels.projectType %></label>
              <select id="tipo" name="projectType" class="form-select" required>
                <option value=""><%= strings.contactForm.projectOptionsSelect || strings.contactForm.labels.projectType %></option>
                <% Object.entries(strings.contactForm.projectOptions).forEach(([value, label]) => { %>
                  <option value="<%= value %>"><%= label %></option>
                <% }) %>
              </select>
              <p class="form-error" data-error-for="projectType"></p>
            </div>

            <div class="form-group">
              <label class="form-label" for="negocio"><%= strings.contactForm.labels.projectContext %></label>
              <input
                type="text"
                id="negocio"
                name="projectContext"
                class="form-input"
                placeholder="<%= strings.contactForm.placeholders.projectContext %>"
              >
              <p class="form-error" data-error-for="projectContext"></p>
            </div>

            <div class="form-group">
              <label class="form-label" for="mensaje"><%= strings.contactForm.labels.message %></label>
              <textarea
                id="mensaje"
                name="message"
                class="form-textarea"
                placeholder="<%= strings.contactForm.placeholders.message %>"
              ></textarea>
              <p class="form-error" data-error-for="message"></p>
              <p class="form-hint">
                <%= strings.hint %>
              </p>
            </div>

            <div class="submit-row">
              <button type="submit" class="btn btn-primary"><%= strings.contactForm.labels.submit %></button>
            </div>

            <div class="form-status" aria-live="polite" role="status"></div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("partials/whatsapp") %>
<%- include("partials/footer") %>
