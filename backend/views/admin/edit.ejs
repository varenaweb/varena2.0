<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit <%= page %> (<%= lang %>)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      margin: 0;
      font-family: Inter, system-ui, -apple-system, sans-serif;
      background: #f8fafc;
    }
    .admin-wrapper {
      padding: 2rem;
      max-width: 1100px;
      margin: 0 auto;
    }
    .admin-card {
      background: #fff;
      border-radius: 14px;
      padding: 1.5rem;
      box-shadow: 0 12px 40px rgba(15, 23, 42, 0.08);
    }
    .admin-card header h1 {
      margin-bottom: 0.25rem;
    }
    .fields-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
      margin-top: 1.5rem;
    }
    .field {
      display: flex;
      flex-direction: column;
    }
    .field label {
      font-weight: 600;
      font-size: 0.95rem;
      margin-bottom: 0.3rem;
    }
    .field small {
      display: block;
      margin-top: 0.25rem;
      color: #6b7280;
      font-size: 0.8rem;
    }
    .field input[type="text"],
    .field textarea {
      border-radius: 8px;
      border: 1px solid #d1d5db;
      padding: 0.6rem 0.75rem;
      font-size: 0.95rem;
      font-family: Inter, system-ui, -apple-system, sans-serif;
    }
    .field textarea {
      min-height: 90px;
      resize: vertical;
    }
    .form-foot {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      margin-top: 1.5rem;
      gap: 0.75rem;
    }
    .status-messages {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }
    .message {
      font-size: 0.9rem;
      color: #16a34a;
    }
    .error {
      font-size: 0.9rem;
      color: #dc2626;
    }
    button {
      padding: 0.6rem 1.4rem;
      border-radius: 999px;
      border: none;
      cursor: pointer;
      background: #2563eb;
      color: white;
      font-weight: 600;
    }
    a.back-link {
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
      margin-right: 1rem;
    }
  </style>
</head>
<body>
  <div class="admin-wrapper">
    <div class="admin-card">
      <header>
        <h1>Edit <%= page %> / <%= lang %></h1>
        <p>Editing <code>backend/content/<%= page %>-<%= lang %>.json</code></p>
      </header>

      <% const savedFlag = typeof saved !== "undefined" ? saved : false; %>
      <% const errorMessage = typeof error !== "undefined" ? error : null; %>
      <form method="post">
        <div class="fields-grid">
          <% fields.forEach((field, idx) => { %>
            <div class="field">
              <label for="field-<%= idx %>">
                <%= field.label %> (<%= lang.toUpperCase() %>)
              </label>
              <% if (field.type === "textarea") { %>
                <textarea
                  id="field-<%= idx %>"
                  name="fields[<%= idx %>][value]"
                  data-field-path="<%= field.path %>"
                ><%= field.value %></textarea>
              <% } else { %>
                <input
                  id="field-<%= idx %>"
                  type="text"
                  name="fields[<%= idx %>][value]"
                  value="<%= field.value %>"
                  data-field-path="<%= field.path %>"
                >
              <% } %>
              <input type="hidden" name="fields[<%= idx %>][path]" value="<%= field.path %>">
              <small><%= field.path %></small>
            </div>
          <% }) %>
        </div>

        <div class="form-foot">
          <div class="status-messages">
            <% if (savedFlag) { %>
              <span class="message">Changes saved.</span>
            <% } %>
            <% if (errorMessage) { %>
              <span class="error">Error: <%= errorMessage %></span>
            <% } %>
          </div>
          <div>
            <a class="back-link" href="/admin">&larr; Back to list</a>
            <button type="submit">Save changes</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
